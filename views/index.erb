<div class="container">
  
  <div class="row justify-content-center">
    <div class="col col-6">
      <img src="<%= uri(addr = "logo.png") %>"/>
      <form action="/generate" method="GET">
        <h1 class="formlegend headline-medium">Text</h1>
        

        <div class="form-group purple-border">
          <textarea class="form-control" id="exampleFormControlTextarea4" name="line1" placeholder="Your text"  rows="5" autofocus=""><%= @line1 if !@line1.nil? %></textarea>
        </div>
 
        <h1 class="formlegend headline-medium">Color</h1>
        
        <div class="form-group">
          <select name="color" class="form-control">
            <option value="green">Green</option>
            <option value="red">Red</option>
            <option value="blue">Blue</option>
            <option value="yellow">Yellow</option>
          </select>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" type="submit">Download your image</button>
        </div>
      </form>
      <% if !@generated_name.nil? %>       
        <img src="<%= uri(addr = @generated_name) %>"/>
      <% end %>
    </div>
  </div>
</div>